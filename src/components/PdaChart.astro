---
import Section from './Section/Section'
import { useLanguage, useText } from '@tools/language'
import { latestReport } from '@data/report'
import { formatDate } from '@tools/date'
import Vega from '@components/Vega/Vega'
import spec from '@data/pda-w-data.vg'

const t = useText()
const format = formatDate(useLanguage())
const from = format('2022-02-24')
const till = format(latestReport.till)
const title = t('pda.title')
const subtitle = t('pda.subtitle', { from, till })
---

<Section {...{ title, subtitle }}>
	<div class="aspect-2.5">
		<Vega client:idle spec={spec} />
	</div>
	<slot slot="description" />
</Section>
