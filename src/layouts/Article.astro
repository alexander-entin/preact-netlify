---
import Layout from "./Base.astro"

Astro.response.headers.set('Cache-Control', 'public, max-age=60')
---

<Layout>
	<slot name="head" slot="head" />
	<article class="max-w-96ch mx-auto">
		<slot />
	</article>
</Layout>

<style is:global>
	h1 {
		position: relative;
		text-align: center;

		&:after {
			content: '';
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			height: 4px;
			background: linear-gradient(to right, #5E9AED 0%, #5E9AED 50%, #FEF300 50%, #FEF300 100%);
		}
	}
</style>