---
import { useMd } from "@src/tools/astro"
import Layout from '@layouts/Layout.astro'
import Container from '@components/Container'
import { useLocation } from "@src/tools/location"

useLocation(Astro)

const Md = await useMd('pages', Astro.params.page)
if (!Md) Astro.redirect('/')
---

<Layout>
	<Container>
		<Md />
	</Container>
</Layout>
