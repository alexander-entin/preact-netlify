{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"target": "es2021",
		"noImplicitAny": false,
		"baseUrl": "src",
		"paths": {
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@data/*": ["data/*"],
			"@layouts/*": ["layouts/*"],
			"@pages/*": ["pages/*"],
			"@paraglide/*": ["paraglide/*"],
			"@styles/*": ["styles/*"],
			"@tools/*": ["tools/*"]
		}
	}
}